{
  "version": 1,
  "disable_existing_loggers": false,
  "loggers": {
    "api": {
      "handlers": [
        "console",
        "logfile"
      ],
      "level": "DEBUG"
    }
  },
  "handlers": {
    "console": {
      "level": "DEBUG",
      "class": "logging.StreamHandler",
      "formatter": "simple"
    },
    "logfile": {
      "level": "INFO",
      "class": "logging.handlers.RotatingFileHandler",
      "maxBytes": 10485760,
      "backupCount": 10,
      "filename": "./logs/api.log",
      "formatter": "simple"
    }
  },
  "formatters": {
    "simple": {
      "format": "%(levelname)s {%(name)s} - %(message)s"
    }
  }
}